<Window x:Class="FrierenHotspot.InstructionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Instruction" Height="300" Width="450"
        WindowStartupLocation="CenterOwner" WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Border CornerRadius="12" Background="#141419" BorderBrush="#2D2D3A" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="20" Opacity="0.6"/>
        </Border.Effect>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="TxtHelpTitle" Grid.Row="0" Foreground="#FF4081" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
            <StackPanel Grid.Row="1">
                <TextBlock x:Name="TxtHelpLine1" Foreground="#E0E0E0" TextWrapping="Wrap" Margin="0,0,0,10"/>
                <TextBlock x:Name="TxtHelpLine2" Foreground="#E0E0E0" TextWrapping="Wrap" Margin="0,0,0,10"/>
                <TextBlock x:Name="TxtHelpStepTitle" Foreground="#A0A0A0" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBlock x:Name="TxtHelpStep1" Foreground="#E0E0E0" Margin="10,0,0,2"/>
                <TextBlock x:Name="TxtHelpStep2" Foreground="#E0E0E0" Margin="10,0,0,2"/>
                <TextBlock x:Name="TxtHelpStep3" Foreground="#E0E0E0" Margin="10,0,0,2"/>
                <TextBlock x:Name="TxtHelpStep4" Foreground="#E0E0E0" Margin="10,0,0,2"/>
            </StackPanel>
            <Button x:Name="BtnOk" Grid.Row="2" Click="BtnOk_Click" Background="#2D2D3A" Foreground="#FFFFFF" BorderThickness="0" Height="35" Margin="0,15,0,0" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border"><Setter Property="CornerRadius" Value="6"/></Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Border>
</Window>